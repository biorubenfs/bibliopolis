{
  "name": "bibliopolis",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "build": "tsc",
    "start": "node --enable-source-maps ./dist/main.js",
    "start:dev": "nodemon --watch src --ext ts --exec \"echo -- compiling -- && pnpm run --silent build && echo -- starting -- && pnpm run --silent start\"",
    "lint": "ts-standard",
    "lint:fix": "ts-standard --fix",
    "test:dev": "pnpm run --silent build && ENVIRONMENT='test' node --test ./dist/tests/*.test.js",
    "test:only": "pnpm run --silent build && ENVIRONMENT='test' node --test --test-only ./dist/tests/*.test.js",
    "test": "ENVIRONMENT='test' node --test ./dist/tests/*.test.js",
    "test:coverage": "ENVIRONMENT='test' node --test --experimental-test-coverage"  
  },
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^5.0.0",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.7.1",
    "chai": "^5.1.1",
    "nodemon": "^3.1.7",
    "ts-standard": "^12.0.2",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-winston": "^4.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.9.0",
    "mongodb-memory-server": "^10.0.1",
    "ulid": "^2.3.0",
    "winston": "^3.15.0",
    "zod": "^3.23.8"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/ts-standard/eslintrc.json"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "ts-standard": {
    "ignore": [
      "dist"
    ]
  }
}