{
  "name": "bibliopolis",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node --enable-source-maps ./dist/main.js",
    "start:dev": "nodemon --watch src --ext ts --exec \"echo -- compiling -- && pnpm run --silent build && echo -- starting -- && pnpm run --silent start\"",
    "lint": "ts-standard",
    "lint:fix": "ts-standard --fix",
    "seed": "node ./dist/scripts/seed.js",
    "test": "ENVIRONMENT='test' vitest run --pool=forks",
    "test:dev": "pnpm run --silent build && ENVIRONMENT='test' vitest run --pool=forks",
    "test:coverage": "ENVIRONMENT='test' vitest run --coverage"
  },
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.7.1",
    "@vitest/coverage-v8": "3.1.1",
    "@vitest/ui": "^3.1.1",
    "nodemon": "^3.1.7",
    "ts-standard": "^12.0.2",
    "tsx": "^4.19.3",
    "typescript": "^5.6.2",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "16.4.5",
    "express": "^4.21.0",
    "express-winston": "^4.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.9.0",
    "mongodb-memory-server": "^10.0.1",
    "ulid": "^2.3.0",
    "winston": "^3.15.0",
    "zod": "^3.23.8"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/ts-standard/eslintrc.json"
    ],
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    }
  },
  "ts-standard": {
    "ignore": [
      "dist",
      "vitest.config.ts"
    ]
  }
}