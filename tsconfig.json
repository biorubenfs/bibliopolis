{
  "compilerOptions": {
    "target": "ES2022",
    "noImplicitAny": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/views/*.ejs"],
  "exclude": ["node_modules"]
}
